PRO monkeycat, BORDER=border; postscript-file oeffnenpsp,"monkeycat", /HELVETICA, /ENC; all fonts --> postscript fonts!P.FONT=0; dimensionen der grafik bestimmen (cm)textheight = 16.textwidth  = 19.hoffset    =  0.5voffset    =  3.DEVICE, XSIZE=textwidth, YSIZE=textheight, YOFFSET=voffset, XOFFSET=hoffset, BITS=8; Rahmen um die grafik zeichnenIF KEYWORD_SET(border) THEN PLOT, [0,0],[1,1], POSITION=[0,0,1,1], TICKLEN=0, /NOERASE, XTICKNAME=REPLICATE(" ",6), YTICKNAME=REPLICATE(" ",6); bildabmessungen und -abstaende festlegen (cm)im_xsz    = 7.5im_ysz    = im_xsz/1.3333333im_xmrgn  = (textwidth-2*im_xsz)/3.5im_ymrgn  = (textheight-2*im_ysz)/3.5im_offx   = 0.5im_offy   = -0.5psshows, (im_offx+1*im_xmrgn+0.5*im_xsz)/textwidth, 0.91, "Okulardominanz (OD)", /NORMAL,SIZE=1.5,/XCENTERpsshows, (im_offx+2*im_xmrgn+1.5*im_xsz)/textwidth, 0.91, "Orientierungspraferenz (OP)", /NORMAL,SIZE=1.5,/XCENTERpsshows, (0.44+im_offx+2*im_xmrgn+1.5*im_xsz)/textwidth, 0.935, ":", ROTATE=-90, /NORMAL,SIZE=0.7,/XCENTERpsshows, (1.0)/textwidth, (im_offy+2*im_ymrgn+1.5*im_ysz)/textheight, "Affe (V1)", /NORMAL,SIZE=1.5, ROTATE=90, /XCENTERpsshows, (1.0)/textwidth, (im_offy+1*im_ymrgn+0.5*im_ysz)/textheight, "Katze (A17)", /NORMAL,SIZE=1.5, ROTATE=90, /XCENTERpsshows, (im_offx+im_xmrgn-1.5*im_xsz-3.2)/textwidth, 0.91, "Okulardominanz (OD)", /NORMAL,SIZE=1.5, /XCENTER;od_katze=REBIN(od_katze,6*(SIZE(od_katze))(1),6*(SIZE(od_katze))(2))READ_GIF,"OD_katze.gif",od_katze,r,g,bTVLCT,r,g,bTV, od_katze, im_offx+im_xmrgn, im_offy+im_ymrgn, XSIZE=im_xsz, YSIZE=im_ysz, /CENTREAD_GIF,"OP_single_katze.gif",op_single_katze,r,g,bTVLCT,r,g,bTV, op_single_katze, im_offx+2*im_xmrgn+1*im_xsz, im_offy+im_ymrgn, XSIZE=im_xsz, YSIZE=im_ysz, /CENTREAD_GIF,"OD_affe.gif",od_affe,r,g,bTVLCT,r,g,bTV, od_affe, im_offx+im_xmrgn, im_offy+2*im_ymrgn+1*im_ysz, XSIZE=im_xsz, YSIZE=im_ysz, /CENTREAD_GIF,"OP_single_affe.gif",op_single_affe,r,g,bTVLCT,r,g,bTV, op_single_affe, im_offx+2*im_xmrgn+1*im_xsz, im_offy+2*im_ymrgn+1*im_ysz, XSIZE=im_xsz, YSIZE=im_ysz, /CENTpsexitEND